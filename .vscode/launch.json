  "version": "0.2.0",
  "configurations": [
    {
      "name": "Watch for Changes",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "run",
        "watch"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Build",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/scripts/build.ps1",
      "cwd": "${cwd}"
    }
  ]
}
